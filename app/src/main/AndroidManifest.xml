<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.borges.moises.expensetracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".accounts.AccountsActivity"
            android:label="@string/accounts_activity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".accountdetail.AccountDetailActivity"
            android:label="@string/acccount_detail"
            android:theme="@style/AppTheme"
            android:parentActivityName=".accounts.AccountsActivity">
        </activity>
        <activity android:name=".addaccount.AddAccountActivity"
                  android:label="@string/add_account_activity"
                  android:theme="@style/AppTheme"
                  android:parentActivityName=".accounts.AccountsActivity">
        </activity>
        <activity android:name=".categories.CategoriesActivity"
                  android:label="@string/categories_activity"
                  android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".addtransaction.AddTransactionActivity"
                  android:label="@string/new_transaction_activity"
                  android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".transactions.TransactionsActivity"
                  android:label="@string/transactions_activity"
                  android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".dashboard.DashboardActivity"
                  android:label="@string/dashboard_activity"
                  android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
